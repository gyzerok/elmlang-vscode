{
  "name": "elmlang",
  "displayName": "elmlang",
  "description": "Elm language support for Visual Studio Code",
  "version": "0.0.1",
  "publisher": "gyzerok",
  "engines": {
    "vscode": "^1.17.0"
  },
  "categories": [
    "Languages"
  ],
  "main": "./out/index",
  "activationEvents": [
    "onLanguage:elm"
  ],
  "contributes": {
    "languages": [
      {
        "id": "elm",
        "aliases": [
          "Elm",
          "elm"
        ],
        "extensions": [
          ".elm"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "elm",
        "scopeName": "source.elm",
        "path": "./syntaxes/elm.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/node": "^8.0.53",
    "prettier": "^1.8.2",
    "typescript": "^2.6.2"
  },
  "dependencies": {
    "vscode": "^1.1.9"
  }
}
